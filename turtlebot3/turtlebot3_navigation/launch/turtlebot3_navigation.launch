<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="scan_topic" default="scan"/>
  <arg name="first_tb3" default="tb3_0"/>
  <arg name="first_tb3_x_pos" default="-7.0"/>
  <arg name="first_tb3_y_pos" default="-1.0"/>
  <arg name="first_tb3_z_pos" default="0.0"/>
  <arg name="first_tb3_yaw" default="0.0"/>
  <arg name="use_sim_time" value="true"/>
  <!-- Initialize robot pose -->
 

 
  <!--node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/-->


  <!-- AMCL -->
  <include file="/home/airsimdemo/MultiAgent_ML/catkin_ws/MultiAgent_ML-main/turtlebot3/turtlebot3_navigation/launch/amcl.launch">
    <arg name="scan_topic" value="/$(arg first_tb3)/scan"/> <!-- Remap scan topic to correct namespace -->
    <arg name="first_tb3" value="$(arg first_tb3)"/>
    <arg name="initial_pose_x" value="$(arg first_tb3_x_pos)"/>
    <arg name="initial_pose_y" value="$(arg first_tb3_y_pos)"/>
    <arg name="initial_pose_a" value="$(arg first_tb3_z_pos)"/>
  </include>

  <!-- move_base -->
  <include file="/home/airsimdemo/MultiAgent_ML/catkin_ws/MultiAgent_ML-main/turtlebot3/turtlebot3_navigation/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="first_tb3" value="$(arg first_tb3)"/>  <!-- Pass first_tb3 to move_base -->
  </include>

  <!-- RViz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d /home/airsimdemo/MultiAgent_ML/catkin_ws/MultiAgent_ML-main/turtlebot3/turtlebot3_navigation/rviz/turtlebot3_navigation.rviz">

    </node>
  </group>
  
</launch>

